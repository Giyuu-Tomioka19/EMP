<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background color of the TextView -->
    <solid android:color="#00000000" /> <!-- Transparent background; change as needed -->

    <!-- Define the border properties -->
    <stroke
        android:width="4dp"
        android:color="#FFFFFF" /> <!-- Border color -->

    <!-- Optionally, you can add padding inside the border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optionally, you can round the corners -->
    <corners android:radius="4dp" />
</shape>